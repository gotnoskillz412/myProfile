{
    "compilerOptions": {
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "noImplicitAny": true,
        "lib": [
            "es2015",
            "dom"
        ],
        "outDir": "../out-tsc/app",
        "module": "es2015",
        "baseUrl": "",
        "types": [
            "core-js"
        ]
    },
    "angularCompilerOptions": {
        "entryModule": "./app/app.module#AppModule",
        "genDir": "../ngfactory"
    },
    "exclude": [
        "test.ts",
        "**/*.spec.ts"
    ]
}
